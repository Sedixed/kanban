{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">

<h1 class="mt-4">Connexion</h1>

{% for message in app.flashes('success') %}
  <div class="alert alert-success mt-4">
    {{ message }}
  </div>
{% endfor %}

{% if error %}
  <div class="alert alert-danger mt-4">
    {{ error.messageKey|trans(error.messageData, 'security') }}
  </div>
{% endif %}

<form action="{{ path('authentication.login') }}" method="post">
  <fieldset>
    <div class="form-group">
      <label for="username" class="form-label mt-4">Pseudonyme</label>
      <input type="text" class="form-control" id="username" name="_username" placeholder="Xx_D4RKTitouanDu92i_xX" value="{{ last_username }}">
    </div>
    <div class="form-group">
      <label for="password" class="form-label mt-4">Mot de passe</label>
      <input type="password" class="form-control" id="examplePpasswordassword" name="_password" placeholder="********">
    </div>
    <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
  </fieldset>
</form>
</div>
{% endblock %}
